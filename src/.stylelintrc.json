{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "screen"]
      }
    ],
    "declaration-colon-space-before": "never",
    "indentation": 2,
    "max-empty-lines": 1,
    "no-duplicate-selectors": true
  }
}
